<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="activity_vertical_margin_mini">8dp</dimen>
    <dimen name="activity_view_padding">16dp</dimen>
    <dimen name="activity_view_padding_mini">8dp</dimen>

    <!-- Consistent Design Tokens - Spacing -->
    <dimen name="spacing_section">20dp</dimen>
    <dimen name="spacing_card_padding">16dp</dimen>
    <dimen name="spacing_element">12dp</dimen>
    <dimen name="spacing_small">8dp</dimen>
    <dimen name="spacing_tiny">4dp</dimen>
    
    <!-- Consistent Design Tokens - Corner Radius (Material 3 Scale) -->
    <dimen name="radius_xs">4dp</dimen>      <!-- Chips, small components -->
    <dimen name="radius_sm">8dp</dimen>      <!-- Buttons, inputs -->
    <dimen name="radius_md">12dp</dimen>     <!-- List items, small cards -->
    <dimen name="radius_lg">16dp</dimen>     <!-- Cards, containers -->
    <dimen name="radius_xl">28dp</dimen>     <!-- Bottom sheets, dialogs -->
    
    <!-- Legacy aliases (for backward compatibility) -->
    <dimen name="radius_card">@dimen/radius_lg</dimen>
    <dimen name="radius_button">@dimen/radius_md</dimen>
    <dimen name="radius_dialog">@dimen/radius_xl</dimen>
    <dimen name="radius_chip">@dimen/radius_sm</dimen>
    
    <!-- Status Indicator -->
    <dimen name="status_indicator_size">12dp</dimen>

</resources>
