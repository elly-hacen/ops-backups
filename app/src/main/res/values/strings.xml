    <string name="backup_script_example">#!/data/data/com.termux/files/usr/bin/env bash\n\nREPO_PATH=~/storage/shared/backups\nLOG_FILE=~/storage/shared/backups/backup.log\n\nlog() {\n    echo \"[$(date \'+%Y-%m-%d %H:%M:%S\')] $1\" | tee -a \"$LOG_FILE\"\n}\n\nlog \"=== Backup started ===\"\n\ncd \"$REPO_PATH\" || {\n    log \"ERROR: Failed to change to directory\"\n    exit 1\n}\n\nif ! git rev-parse --git-dir > /dev/null 2>&amp;1; then\n    log \"ERROR: Not a git repository\"\n    exit 1\nfi\n\ngit add . 2>&amp;1 | tee -a \"$LOG_FILE\"\n\nif git diff --staged --quiet; then\n    log \"No changes to backup\"\n    exit 0\nfi\n\nif git commit -m \"Backup $(date \'+%Y-%m-%d %H:%M:%S\')\" 2>&amp;1 | tee -a \"$LOG_FILE\"; then\n    log \"Commit successful\"\nelse\n    log \"ERROR: Commit failed\"\n    exit 1\nfi\n\nif git push 2>&amp;1 | tee -a \"$LOG_FILE\"; then\n    log \"Backup pushed successfully\"\n    log \"=== Backup completed ===\"\nelse\n    log \"ERROR: Push failed\"\n    exit 1\nfi</string>
